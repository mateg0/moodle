<div class="sh-block stopwatch" id="stopwatch">
    <div class="ctx-header-block round-progress">
        <svg id="timer" height="100" width="100" viewBox="0 0 100 100">
            <circle cx="50" cy="50" r="46" fill="none" stroke="#C4C4C4" stroke-width="6" />
            <circle cx="50" cy="50" r="46" transform="rotate(-90 50 50)" fill="none" stroke-dashoffset="288" stroke-dasharray="288" class="clr-primary-stroke-by-theme" stroke-width="4">
                <animate attributeName="stroke-dashoffset" values="288;0" dur="60s" begin="none"></animate>
                <!-- 288 is 3.14*46*2 is 2*PI*R -->
            </circle>
            <circle id="" cx="50%" cy="4" r="3" class="clr-primary-color-by-theme" stroke="#a4a4a4" stroke-width="1">
                <animateTransform attributeName="transform" type="rotate" from="0 50 50" to="360 50 50" dur="60s" begin="none"/>
            </circle>
            <text id="hours" font-size="20" x="35%" y="50%" fill="#353535" dy="7" text-anchor="middle">00</text>
            <text id="count" x="50%" y="50%" fill="#353535" text-anchor="middle" dy="5" font-size="20">:</text>
            <text id="minutes" font-size="20" x="65%" y="50%" fill="#353535" dy="7" text-anchor="middle">00</text>
        </svg>
    </div>
    <div class="title-message">
        Вы с нами
    </div>
</div>