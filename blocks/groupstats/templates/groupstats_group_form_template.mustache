<div class="gs-cs-group-select">
    <div class="gs-cs-group-line current-line" id="gs-cs-gms-select">
        <div class="gs-cs-data-section" id="gs-cs-group-data-section">
            <div class="gs-cs-logo">

            </div>
            <div class="gs-cs-group-name">
                Выберите группу
            </div>
        </div>
        <div class="gs-cs-group-selector">
            <svg width="21" height="14" viewBox="0 0 21 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 2L10.5 11L19 2" stroke-width="3"/>
            </svg>
        </div>
    </div>
    <!-- list -->
    <div class="gs-cs-group-list hide" id="gs-cs-gms-list">
        {{#searchgroups}}
            <div class="gs-group-search-line">
                <input type="search" placeholder="Найти группу" class="non-click" id="gs-group-search">
            </div>
        {{/searchgroups}}
        {{^searchgroups}}
            <div class="gs-nodata">Нет доступных групп</div>
        {{/searchgroups}}
        {{#groups}}
        <div class="gs-cs-group-line">
            <div class="gs-cs-data-section">
                <div class="gs-cs-group-logo">
                    <img src="{{groupimage}}" />
                </div>
                <div class="gs-cs-group-name" data-id="{{groupid}}">
                    {{groupname}}
                </div>
            </div>
            <div class="gs-cs-group-selector">
                <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" version="1.1">
                    <circle cx="5" cy="5" r="3"></circle>
                </svg>
            </div>
        </div>
        {{/groups}}
    </div>
    <!-- list -->
</div>
